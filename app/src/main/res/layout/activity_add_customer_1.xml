<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cable.cloud.cableplus_new.com.cable.cloud.AddCustomer_1">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimaryDark"
            app:collapseIcon="@drawable/ic_back_white"
            app:popupTheme="@style/AppTheme.PopupOverlay" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/footer"
        android:layout_below="@id/header">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/spinner2"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:spinnerMode="dropdown" />

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:dropDownSelector="@drawable/ic_arrow_drop_down_black"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:spinnerMode="dropdown" />

                    <EditText
                        android:id="@+id/editText2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/border"
                        android:hint="Account No *"
                        android:imeOptions="actionNext"
                        android:padding="13dp"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/editText3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/border"
                        android:hint="Customer Name *"
                        android:imeOptions="actionNext"
                        android:padding="13dp"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/editText13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/border"
                        android:ems="10"
                        android:hint="Phone Number *"
                        android:imeOptions="actionNext"
                        android:inputType="phone"
                        android:padding="13dp"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/editText14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/border"
                        android:ems="10"
                        android:hint="Email Address"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:padding="13dp"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/editText15"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/border"
                        android:ems="10"
                        android:hint="Address *"
                        android:imeOptions="actionNext"
                        android:inputType="textPostalAddress"
                        android:maxLines="10"
                        android:padding="13dp"
                        android:singleLine="false" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">

                        <EditText
                            android:id="@+id/editText16"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border"
                            android:ems="9"
                            android:hint="City"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:padding="13dp"
                            android:singleLine="true" />

                        <EditText
                            android:id="@+id/editText17"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/border"
                            android:ems="9"
                            android:hint="District"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:padding="13dp"
                            android:singleLine="true" />


                    </TableRow>

                    <EditText
                        android:id="@+id/editText18"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/border"
                        android:ems="10"
                        android:hint="ZIP Code"
                        android:imeOptions="actionNext"
                        android:inputType="number"
                        android:padding="13dp"
                        android:singleLine="true" />

                    <EditText
                        android:id="@+id/editText19"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/border"
                        android:hint="CAF No."
                        android:imeOptions="actionNext"
                        android:padding="13dp"
                        android:singleLine="true" />

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">


                        <EditText
                            android:id="@+id/editText10"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border"
                            android:ems="9"
                            android:focusable="false"
                            android:hint="Conn. Start"
                            android:imeOptions="actionNext"
                            android:inputType="date"
                            android:padding="13dp"
                            android:singleLine="true" />

                        <EditText
                            android:id="@+id/editText11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/border"
                            android:ems="9"
                            android:focusable="false"
                            android:hint="Conn. End"
                            android:imeOptions="actionNext"
                            android:inputType="date"
                            android:padding="13dp"
                            android:singleLine="true" />
                    </TableRow>

                    <EditText
                        android:id="@+id/editText12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/border"
                        android:ems="10"
                        android:focusable="false"
                        android:hint="Select Birth Date"
                        android:imeOptions="actionNext"
                        android:inputType="date"
                        android:padding="13dp"
                        android:singleLine="true" />

                </LinearLayout>

            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_16"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:background="@color/white" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:text="Next"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_16"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>
